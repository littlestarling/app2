<% provide(:title, 'Contact form') %>
<h1>contact</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@contact) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :content %>
      <%= f.text_area :content, placeholder: "what do you want..." %>

      <%= f.submit "Send form", class: "btn btn-large btn-primary" %>

    <% end %>
    
    
  </div>
  
</div>